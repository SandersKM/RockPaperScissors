<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">

    <Button
        android:id="@+id/stone_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="185dp"
        android:layout_x="118dp"
        android:layout_y="95dp"
        android:background="@drawable/stonepic"
        android:text=" "
        app:layout_constraintBottom_toTopOf="@+id/paper_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scissors_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scissors_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="346dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="416dp"
        android:layout_x="118dp"
        android:layout_y="95dp"
        android:background="@drawable/scissorspic"
        android:text=" "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/stone_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/paper_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="367dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="181dp"
        android:layout_x="118dp"
        android:layout_y="95dp"
        android:background="@drawable/paperpic"
        android:text=" "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stone_button" />
</android.support.constraint.ConstraintLayout>